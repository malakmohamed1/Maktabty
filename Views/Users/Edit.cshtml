@model Project_.Models.User

@{
    ViewBag.Title = "Edit";
}
@*Login page*@



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <link rel="stylesheet" href="~/Styles/style.css">


    <div class="image"><img src="~/Images/image-asset.jpeg" style="width: 100%;height:100%"></div>
    <nav>
        <a class="Maktabty" href="~/Books/books_before_login">Maktabty</a><img src="~/Images/phone.png" style="width: 15px; height:15px;position: absolute;left:290px;top: 21px;">
        <a class="links" href="ContactUs_before">Contact Us</a><img src="~/Images/info.png" style="width: 15px; height:15px;position: absolute;left:400px;top: 21px;">
        <a class="links" href="AboutUs_before" style="margin-right: 500px;">About Us</a>
        <a class="links" style="margin-right: 500px;" href="Create">
            Register

        </a>

    </nav>
    <fieldset style="height: 70%;top: 100px;position: absolute;">
        <legend style="font-size: x-large;">Login</legend>
        <form action="/action_page.php">
            <br><br><br><br>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-horizontal">

                <div class="form-group">
                    @Html.LabelFor(model => model.NatID, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NatID, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NatID, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br><br>


                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br><br>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Login" class="submit" id="Finish" />
                    </div>
                </div>
        </form>
    </fieldset>

    <div style="top: 108%;" class="lastpart">
        <li>
            <strong style=" font-size: xx-large; margin-top: 5%;">Maktabty</strong><br>
            <a href=""><img class="socialmedia" style=" padding-left: 2%;" src="~/Images/instagram.png" alt="instagram"></a>
            <a href=""> <img class="socialmedia" src="~/Images/facebook.png" alt="facebook"></a>
            <a href=""> <img class="socialmedia" src="~/Images/twitter (1).png" alt="twitter"></a>
            <a href=""> <img class="socialmedia" src="~/Images/youtube.png" alt="youtube"></a>
        </li>
        <a href="AboutUs_before"><li style="margin-left: 40%;color: #000;"> About Us</li></a>
        <a href="ContactUs_before"><li style="margin-left: 40%; margin-top: 90px; color: #000;"> Contact Us</li></a>

    </div>


}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
